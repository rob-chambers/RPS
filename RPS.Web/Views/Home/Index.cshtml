@model IList<RPS.Web.Models.Report>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel-group" id="panel-203108">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a class="panel-title collapsed" data-toggle="collapse" data-parent="#panel-203108" href="#panel-element-956845">Ferrexpo</a>
                </div>
                <div class="panel-collapse collapse" id="panel-element-956845">
                    <div class="panel-body">
                        <input type="radio" name="options" value="cheese" >
                        <label>cheese</label>
                        <input type="radio" name="options" class="radio" value="tomatoes">
                        <label>tomoates</label>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Country</th>
                    <th>Industry</th>
                    <th>Sector</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Id</td>       
                        <td>@report.Category</td>
                        <td>@report.Title</td>                        
                        <td>@report.Country.Name</td>                        
                        <td>@report.Industry.Name</td>      
                        <td>@{
                                var sectorName = "<N/A>";
                                if (report.Sector != null)
                                {
                                    sectorName = report.Sector.Name;
                                }
                            }
                            @sectorName
                        </td>         
                        <td>
                            @report.Sector    
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
        <ul class="pagination">
            <li>
                <a href="#">Prev</a>
            </li>
            <li>
                <a href="#">1</a>
            </li>
            <li>
                <a href="#">2</a>
            </li>
            <li>
                <a href="#">3</a>
            </li>
            <li>
                <a href="#">4</a>
            </li>
            <li>
                <a href="#">5</a>
            </li>
            <li>
                <a href="#">Next</a>
            </li>
        </ul> 
    </div>
    
    <div class="row">
        <button type="button" class="btn btn-lg btn-primary">
            Process
        </button>
    </div>
</div>